@model IEnumerable<Perpustakaan.Models.Buku>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JudulBuku)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pengarang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Penerbit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoKatalogNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoRakNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JudulBuku)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pengarang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Penerbit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoKatalogNavigation.NoKatalog)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoRakNavigation.NoRak)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NoBuku">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NoBuku">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NoBuku">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
